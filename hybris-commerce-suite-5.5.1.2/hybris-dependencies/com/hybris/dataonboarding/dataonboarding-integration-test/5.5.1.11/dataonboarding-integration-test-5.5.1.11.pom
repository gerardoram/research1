<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>dataonboarding-project</artifactId>
		<groupId>com.hybris.dataonboarding</groupId>
		<version>5.5.1.11</version>
	</parent>

	<artifactId>dataonboarding-integration-test</artifactId>
	<name>dataonboarding-integration-test</name>

	<dependencies>
		<dependency> <!-- artifact to be tested -->
			<groupId>com.hybris.dataonboarding</groupId>
			<artifactId>dataonboarding-rest-client</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
		     <groupId>com.hybris.kernel</groupId>
		     <artifactId>init-app-rest-client</artifactId>
		     <version>${hybris.kernel.version}</version>
		     <scope>test</scope>
		     <exclusions>
		     	<exclusion>
		     		<artifactId>hybris-commons-rest-client</artifactId>
		     		<groupId>com.hybris.commons</groupId>
		     	</exclusion>
		     </exclusions>
		</dependency>
		<dependency>
			<groupId>com.hybris.commons</groupId>
			<artifactId>hybris-commons-configuration</artifactId>
			<version>${hybris.commons.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.hybris.commons</groupId>
			<artifactId>hybris-commons-tenant</artifactId>
			<version>${hybris.commons.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.hybris.dataonboarding</groupId>
			<artifactId>dataonboarding-test-configuration</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency> <!-- needed for deployment -->
			<groupId>com.hybris.dataonboarding</groupId>
			<artifactId>dataonboarding-webapp</artifactId>
			<type>war</type>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>**/*IntegrationTest.java</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>integration</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-failsafe-plugin</artifactId>
						<executions>
							<execution>
								<id>integration-test</id>
								<goals>
									<goal>integration-test</goal>
								</goals>
							</execution>
							<execution>
								<id>verify</id>
								<goals>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<skipTests>${skipIntegrationTests}</skipTests>
							<includes>
								<include>**/*IntegrationTest.java</include>
							</includes>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.cargo</groupId>
						<artifactId>cargo-maven2-plugin</artifactId>
						<executions>
							<execution>
								<id>start-container</id>
								<phase>pre-integration-test</phase>
								<!-- A container that's started with cargo:start will automatically shut down as soon as the parent Maven instance quits -->
								<goals>
									<goal>start</goal>
									<goal>deploy</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<skip>${skipIntegrationTests}</skip>
							<container>
								<containerId>jetty8x</containerId>
								<zipUrlInstaller>
									<url>http://repo1.maven.org/maven2/org/eclipse/jetty/jetty-distribution/8.1.9.v20130131/jetty-distribution-8.1.9.v20130131.zip</url>
									<downloadDir>/tmp/cargo/downloads</downloadDir>
								</zipUrlInstaller>
								<systemProperties>
									<com.sun.management.jmxremote />
									<com.sun.management.jmxremote.port>1099</com.sun.management.jmxremote.port>
									<com.sun.management.jmxremote.ssl>false</com.sun.management.jmxremote.ssl>
									<com.sun.management.jmxremote.authenticate>false</com.sun.management.jmxremote.authenticate>
									<java.rmi.server.hostname>localhost</java.rmi.server.hostname>
								</systemProperties>
								<dependencies>
									<dependency>
							    	<location>${project.basedir}/../dataonboarding-test-configuration/deploy/integration/</location>
							    </dependency>
								</dependencies>
							</container>
							<deployer>
								<type>installed</type>
								<deployables>
									<deployable>
										<groupId>com.hybris.dataonboarding</groupId>
										<artifactId>dataonboarding-webapp</artifactId>
										<type>war</type>
										<pingURL>http://localhost:8080/dataonboarding-webapp/index.jsp</pingURL>
										<pingTimeout>120000</pingTimeout>
										<properties>
											<context>dataonboarding-webapp</context>
										</properties>
									</deployable>
								</deployables>
							</deployer>
							<configuration>
								<properties>
									<cargo.servlet.port>8080</cargo.servlet.port>
								</properties>
							</configuration>
						</configuration>
					</plugin>
					<!--skip deploy (this is just a test module) -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-deploy-plugin</artifactId>
						<configuration>
							<skip>true</skip>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.robotframework</groupId>
						<artifactId>robotframework-maven-plugin</artifactId>
						<version>1.4.1</version>
						<configuration>
							<skipTests>${skipIntegrationTests}</skipTests>
						</configuration>
					</plugin>
				</plugins>
			</build>

			<reporting>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-report-plugin</artifactId>
						<version>${maven.surefire.plugin.version}</version>
						<reportSets>
							<reportSet>
								<id>integration-tests</id>
								<reports>
									<report>failsafe-report-only</report>
								</reports>
							</reportSet>
						</reportSets>
					</plugin>
				</plugins>
			</reporting>
		</profile>
	</profiles>
</project>
