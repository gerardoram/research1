<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>order-management-system</artifactId>
		<groupId>com.hybris.oms</groupId>
		<version>5.5.1.11</version>
	</parent>

	<artifactId>order-management-integration-test</artifactId>
	<name>order-management-integration-test</name>

	<dependencies>
		<dependency>
			<groupId>com.hybris.oms</groupId>
			<artifactId>oms-service</artifactId>
			<type>test-jar</type>
			<scope>test</scope>
		</dependency>

		<!-- OMS dependencies -->
		<dependency>
			<groupId>com.hybris.oms</groupId>
			<artifactId>oms-rest-client</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.hybris.oms</groupId>
			<artifactId>oms-export-rest-client</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.hybris.oms</groupId>
			<artifactId>oms-ui-rest-client</artifactId>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>**/*IntegrationTest.java</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>

			<id>integration-remote</id>

			<dependencies>
				<dependency>
					<groupId>com.hybris.oms</groupId>
					<artifactId>oms-rest-webapp</artifactId>
					<version>${project.version}</version>
					<type>war</type>
				</dependency>
			</dependencies>

			<build>
				<plugins>
					<plugin>
						<artifactId>maven-failsafe-plugin</artifactId>
						<executions>
							<execution>
								<id>integration-test</id>
								<goals>
									<goal>integration-test</goal>
								</goals>
							</execution>
							<execution>
								<id>verify</id>
								<goals>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<includes>
								<include>**/*IntegrationTest.java</include>
							</includes>
						</configuration>
					</plugin>
				</plugins>
			</build>

		</profile>
		<!-- Regular OMS project -->
		<profile>

			<id>integration</id>

			<dependencies>
				<dependency>
					<groupId>com.hybris.oms</groupId>
					<artifactId>oms-rest-webapp</artifactId>
					<version>${project.version}</version>
					<type>war</type>
				</dependency>

				<dependency>
					<groupId>mysql</groupId>
					<artifactId>mysql-connector-java</artifactId>
				</dependency>
				<dependency>
					<groupId>com.microsoft</groupId>
					<artifactId>sqljdbc</artifactId>
				</dependency>
				<dependency>
					<groupId>com.oracle</groupId>
					<artifactId>ojdbc6</artifactId>
				</dependency>
			</dependencies>

			<build>
				<plugins>
					<plugin>
						<artifactId>maven-failsafe-plugin</artifactId>
						<executions>
							<execution>
								<id>integration-test</id>
								<goals>
									<goal>integration-test</goal>
								</goals>
							</execution>
							<execution>
								<id>verify</id>
								<goals>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<includes>
								<include>**/*IntegrationTest.java</include>
							</includes>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.cargo</groupId>
						<artifactId>cargo-maven2-plugin</artifactId>
						<executions>
							<execution>
								<id>start-container</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>start</goal>
									<goal>deploy</goal>
								</goals>
							</execution>
							<execution>
								<id>stop-container</id>
								<phase>post-integration-test</phase>
								<goals>
									<goal>stop</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<skip>${skipTests}</skip>
							<container>
								<containerId>jetty8x</containerId>
								<zipUrlInstaller>
									<url>
										http://repo1.maven.org/maven2/org/eclipse/jetty/jetty-distribution/8.1.5.v20120716/jetty-distribution-8.1.5.v20120716.zip
									</url>
									<downloadDir>/tmp/cargo/downloads</downloadDir>
								</zipUrlInstaller>
								<dependencies>
									<dependency>
										<location>${project.basedir}/src/test/resources</location>
									</dependency>
									<dependency>
										<groupId>mysql</groupId>
										<artifactId>mysql-connector-java</artifactId>
									</dependency>
									<dependency>
										<groupId>com.microsoft</groupId>
										<artifactId>sqljdbc</artifactId>
									</dependency>
									<dependency>
										<groupId>com.oracle</groupId>
										<artifactId>ojdbc6</artifactId>
									</dependency>
								</dependencies>
							</container>
							<deployer>
								<type>installed</type>
								<deployables>
									<deployable>
										<groupId>com.hybris.oms</groupId>
										<artifactId>oms-rest-webapp</artifactId>
										<type>war</type>
										<pingURL>http://localhost:8080/oms-rest-webapp/</pingURL>
										<pingTimeout>600000</pingTimeout>
										<properties>
											<context>oms-rest-webapp</context>
										</properties>
									</deployable>
								</deployables>
							</deployer>
							<configuration>
								<properties>
									<cargo.servlet.port>8080</cargo.servlet.port>
									<!-- use this for remote debugging 
							        <cargo.jvmargs>
							          -Xdebug
							          -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=8000
							          -Xnoagent
							          -Djava.compiler=NONE
							        </cargo.jvmargs>
							        -->
								</properties>
							</configuration>
						</configuration>
					</plugin>
					<!--skip deploy (this is just a test module) -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-deploy-plugin</artifactId>
						<configuration>
							<skip>true</skip>
						</configuration>
					</plugin>
				</plugins>
			</build>

			<reporting>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-report-plugin</artifactId>
						<version>${maven.surefire.plugin.version}</version>
						<reportSets>
							<reportSet>
								<id>integration-tests</id>
								<reports>
									<report>failsafe-report-only</report>
								</reports>
							</reportSet>
						</reportSets>
					</plugin>
				</plugins>
			</reporting>
		</profile>

	</profiles>
</project>
