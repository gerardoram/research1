<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.hybris.cis.ext</groupId>
		<artifactId>hybris-cis-core-subscription-ext</artifactId>
		<version>5.5.1.0.24</version>
	</parent>

	<artifactId>hybris-cis-core-subscription-ext-integration-test</artifactId>
    <packaging>jar</packaging>

	<dependencies>
        <dependency>
            <groupId>com.hybris.cis.ext</groupId>
            <artifactId>hybris-cis-core-subscription-ext-web</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
		<dependency>
			<groupId>com.hybris.cis</groupId>
			<artifactId>hybris-cis-api-shared</artifactId>
			<scope>test</scope>
			<type>test-jar</type>
		</dependency>
		<dependency>
			<groupId>com.hybris.cis</groupId>
			<artifactId>hybris-cis-subscription-rest-client</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>**/*IntegrationTest.java</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

 	<profiles>
		<profile>
			<id>integration</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-failsafe-plugin</artifactId>
						<executions>
							<execution>
								<id>integration-test</id>
								<goals>
									<goal>integration-test</goal>
								</goals>
							</execution>
							<execution>
								<id>verify</id>
								<goals>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<includes>
								<include>**/*IntegrationTest.java</include>
							</includes>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.cargo</groupId>
						<artifactId>cargo-maven2-plugin</artifactId>
						<executions>
							<execution>
								<id>start-container</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>start</goal>
									<goal>deploy</goal>
								</goals>
							</execution>
							<execution>
								<id>stop-container</id>
								<phase>post-integration-test</phase>
								<goals>
									<goal>stop</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<skip>${skipTests}</skip>
							<container>
								<containerId>jetty8x</containerId>
								<zipUrlInstaller>
									<url>http://repo1.maven.org/maven2/org/eclipse/jetty/jetty-distribution/8.1.5.v20120716/jetty-distribution-8.1.5.v20120716.zip</url>
									<downloadDir>/tmp/cargo/downloads</downloadDir>
								</zipUrlInstaller>
                                <systemProperties>
                                    <hybris.server.url>http://localhost:8080</hybris.server.url>
                                </systemProperties>
							</container>
							<deployer>
								<type>installed</type>
								<deployables>
									<deployable>
										<groupId>${project.parent.groupId}</groupId>
										<artifactId>${project.parent.artifactId}-web</artifactId>
										<type>war</type>
										<pingURL>http://localhost:8080/${project.parent.artifactId}-web/status</pingURL>
										<pingTimeout>90000</pingTimeout>
										<properties>
											<context>${project.parent.artifactId}-web</context>
										</properties>
									</deployable>
								</deployables>
							</deployer>
							<configuration>
								<properties>
									<cargo.servlet.port>8080</cargo.servlet.port>
								</properties>
							</configuration>
						</configuration>
					</plugin>
					<!-- skip deploy (this is just a test module) --> 
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-deploy-plugin</artifactId>
						<configuration>
							<skip>true</skip>
						</configuration>
					</plugin>
				</plugins>
			</build>

			<reporting>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-report-plugin</artifactId>
						<version>${maven.surefire.plugin.version}</version>
						<reportSets>
							<reportSet>
								<id>integration-tests</id>
								<reports>
									<report>failsafe-report-only</report>
								</reports>
							</reportSet>
						</reportSets>
					</plugin>
				</plugins>
			</reporting>
		</profile>
	</profiles>
</project>
